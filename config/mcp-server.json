{
    "mcp_server": {
        "name": "STIG-Assessment-MCP-Server",
        "version": "1.0.0",
        "description": "Model Context Protocol Server for Windows 11 STIG Assessment Tool with NIST NCP Repository Integration",
        "port": 8080,
        "host": "localhost",
        "protocol": "http",
        "security": {
            "enable_tls": false,
            "certificate_path": "",
            "private_key_path": "",
            "require_authentication": false,
            "api_key_header": "X-API-Key"
        }
    },
    "nist_ncp_config": {
        "repository_url": "https://ncp.nist.gov/repository",
        "api_base": "https://ncp.nist.gov/repository/api/v1",
        "endpoints": {
            "frameworks": "/frameworks",
            "controls": "/frameworks/{framework}/controls",
            "profiles": "/profiles",
            "baselines": "/profiles/{profile}/baseline",
            "mappings": "/mappings/{source}/{target}",
            "search": "/search"
        },
        "supported_frameworks": [
            "NIST-800-53",
            "NIST-CSF", 
            "NIST-800-171",
            "NIST-Privacy-Framework",
            "NIST-RMF"
        ],
        "cache_settings": {
            "enable_cache": true,
            "cache_ttl_hours": 24,
            "cache_directory": "./cache/nist",
            "auto_refresh": true,
            "refresh_schedule": "0 2 * * 0"
        }
    },
    "enterprise_integration": {
        "siem_connectors": [
            {
                "name": "Splunk",
                "endpoint": "https://splunk.company.com:8089/services/collector",
                "format": "json",
                "authentication": "http_token",
                "enabled": false
            },
            {
                "name": "QRadar",
                "endpoint": "https://qradar.company.com/api/ariel/searches",
                "format": "json", 
                "authentication": "api_key",
                "enabled": false
            },
            {
                "name": "Sentinel",
                "endpoint": "https://company.ods.opinsights.azure.com/api/logs",
                "format": "json",
                "authentication": "workspace_key",
                "enabled": false
            }
        ],
        "grc_platforms": [
            {
                "name": "ServiceNow GRC",
                "endpoint": "https://company.service-now.com/api/now/table/grc_object",
                "format": "json",
                "authentication": "oauth2",
                "enabled": false
            },
            {
                "name": "RSA Archer",
                "endpoint": "https://archer.company.com/rsarcher/api",
                "format": "xml",
                "authentication": "session_token",
                "enabled": false
            },
            {
                "name": "MetricStream",
                "endpoint": "https://metricstream.company.com/api/v1/compliance",
                "format": "json",
                "authentication": "api_key",
                "enabled": false
            }
        ]
    },
    "compliance_reporting": {
        "auto_reporting": {
            "enabled": false,
            "schedule": "0 6 * * 1",
            "include_nist_mappings": true,
            "format_preferences": ["nist-json", "pdf", "excel"],
            "distribution_list": [
                "security-team@company.com",
                "compliance@company.com"
            ]
        },
        "real_time_updates": {
            "enabled": false,
            "webhook_endpoints": [],
            "failure_threshold": 5,
            "notification_channels": ["email", "slack", "teams"]
        }
    },
    "organization_policies": {
        "baseline_profiles": [
            {
                "name": "Corporate Baseline",
                "nist_profile": "cybersecurity-framework",
                "risk_level": "moderate",
                "custom_controls": [],
                "exclusions": []
            },
            {
                "name": "High Security Baseline", 
                "nist_profile": "privacy-framework",
                "risk_level": "high",
                "custom_controls": [],
                "exclusions": []
            }
        ],
        "policy_overrides": {
            "allow_local_overrides": false,
            "require_justification": true,
            "approval_workflow": true,
            "audit_trail": true
        }
    },
    "logging": {
        "level": "INFO",
        "format": "json",
        "output": [
            {
                "type": "file",
                "path": "./logs/mcp-server.log",
                "max_size_mb": 50,
                "max_files": 10
            },
            {
                "type": "console",
                "enabled": true,
                "color": true
            }
        ],
        "audit_log": {
            "enabled": true,
            "path": "./logs/mcp-audit.log",
            "include_payloads": false,
            "retention_days": 90
        }
    },
    "performance": {
        "max_concurrent_requests": 100,
        "request_timeout_seconds": 300,
        "rate_limiting": {
            "enabled": true,
            "requests_per_minute": 60,
            "burst_limit": 100
        },
        "circuit_breaker": {
            "enabled": true,
            "failure_threshold": 10,
            "timeout_seconds": 60,
            "retry_interval_seconds": 30
        }
    },
    "development": {
        "debug_mode": false,
        "mock_nist_api": false,
        "test_endpoints": true,
        "swagger_ui": true,
        "cors_enabled": true,
        "allowed_origins": ["http://localhost:3000", "http://localhost:8080"]
    }
}
