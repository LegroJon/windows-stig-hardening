{
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },
    "github.copilot.chat.welcomeMessage": "never",
    "github.copilot.advanced": {
        "debug.overrideEngine": "copilot-chat",
        "debug.useNodeFetcher": true
    },
    "workbench.colorTheme": "Abyss",
    "editor.wordWrap": "on",
    "files.autoSave": "afterDelay",
    "editor.suggestOnTriggerCharacters": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    // CSS validation settings for template files
    "css.validate": true,
    "html.validate.styles": false,
    // Suppress CSS linting in template files since they contain placeholders
    "files.associations": {
        "templates/*.html": "html"
    },
    // Disable CSS validation for template directory
    "[html]": {
        "html.validate.styles": false
    }
}
